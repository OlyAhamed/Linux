{
  "layer": "top",
  "modules-left": ["group/menu",  
                  "hyprland/workspaces"
 
  ],
  "modules-center": ["clock"], 
  "modules-right": ["battery",
                   "group/brightness",
                   "group/volume",
                   "group/hardware",
                   "group/wifi",
                   "group/blue",
                   "group/power"
  ],


  "clock": {
    "format": "{:%a  %d  %H:%M}",
    "format-alt": "{:%Y-%m-%d %H:%M:%S}",
    "interval": 60,
    "tooltip": false
},

  "hyprland/workspaces": {
  "format": "",
  "persistent-workspaces": {
         "*": 5, // 5 workspaces by default on every monitor
         "HDMI-A-1": 3 // but only three on HDMI-A-1
   },
  "on-click": "activate",
  "on-scroll-down": "hyprctl dispatch workspace e+1",
  "on-scroll-up": "hyprctl dispatch workspace e-1",
  "cursor": "pointer"
    },
  
  "hyprland/window": {
      "format": "{}",
      "rewrite": {
          "(.*) ‚Äî Mozilla Firefox": "üåé $1",
          "(.*) - fish": "> [$1]"
      },
      "separate-outputs": true
  },
  
  "memory": {
      "interval": 30,
      "format": "Mem {used:0.1f}G/{total:0.1f}G"
  },

  "battery": { 
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
     },
    "format": "{icon} {capacity}%",
    "format-icons": ["Û∞Å∫", "Û∞Åº", "Û∞Åæ", "Û∞ÇÄ", "Û±ü¢"],
    "max-length": 25
  },
  
    "group/wifi": {
    "orientation": "horizontal",
    "modules": ["custom/icon-wifi","network"],
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false,
      "hide-on-unfocus": true
     }
  },
  "custom/icon-wifi": {
   "format": "Ôá´ " ,
   "tooltip": false
  },
  "network": {
      "interface": "wlan0",
      "format": "{ifname}",
      "format-wifi": "{essid}",
      "format-ethernet": "{ipaddr}/{cidr} Û∞äó",
      "format-disconnected": "", 
      "tooltip-format": "{ifname} via {gwaddr} Û∞äó ",
      "tooltip-format-wifi": "{essid} ({signalStrength}%)  Ôá´ ",
      "tooltip-format-ethernet": "{ifname} ÔÉÅ ",
      "tooltip-format-disconnected": "Disconnected",
      "max-length": 50,
      "markup": true,
      "on-click": "nm-connection-editor"
  },

    "group/blue": {
    "orientation": "horizontal",
    "modules": ["custom/icon-blue","bluetooth"],
    "drawer": {
      "transition-duration": 800,
      "transition-left-to-right": false,
      "hide-on-unfocus": true
     }
  },

  "custom/icon-blue": {
   "format": "Ôäì " ,
   "tooltip": false
  },

  "bluetooth": {
      // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
      "format": "{status}",
      "format-disabled": "", // an empty format will hide the module
      "format-connected": "{alias}",
      "tooltip": "false",
      "on-click": "blueberry" ,
      "format-connected": "{device_alias}" 
  },
  
  "group/volume": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "pulseaudio/slider"],
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false,
      "hide-on-unfocus": true
     }
  }, 
  

  "pulseaudio": {
      "format": "Û∞ïæ  {volume}%",
      "format-bluetooth": "Û∞Ç∞  {volume}%",
      "format-muted": "Û∞ñÅ ",
      "format-icons": {
          "alsa_output.pci-0000_00_1f.3.analog-stereo": "Óå≠",
          "alsa_output.pci-0000_00_1f.3.analog-stereo-muted": "Óª®Óå≠",
          "headphone": "ÔÄ•",
          "hands-free": "Ôñê",
          "headset": "Ôñê",
          "phone": "ÔÇï",
          "phone-muted": "Ó¥ó",
          "portable": "ÔÇï",
          "car": "ÔÜπ",
          "default": ["ÔÄß", "ÔÄ®"]
      },
      "scroll-step": 1,
      "on-click": "pavucontrol",
      "ignored-sinks": ["Easy Effects Sink"],
      "markup": true
  },

  "pulseaudio/slider": {
   "min": 0,
   "max": 100,
   "orientation": "horizontal"
  },

  "group/menu": {
    "orientation": "horizontal",
    "modules": ["custom/icon","custom/launcher","custom/launcher2","custom/swaync", "custom/hyprshot"],
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": true,
      "hide-on-unfocus": true
     }
  }, 

  "custom/launcher": {
    "format": "Óöè ",
    "tooltip": false,
    "on-click": "~/.config/rofi/launchers/type-1/launcher.sh"
  },
  "custom/launcher2": {
    "format": "Û∞ã© ",
    "tooltip": false,
    "on-click": "~/.config/rofi/launchers/type-1/wallpicker.sh"
  },
  "custom/swaync": {
    "format": "Û∞Çö ",
    "tooltip": false,
    "on-click": "swaync-client -R -rs -op"
  },

  "custom/hyprshot": {
    "format": "ÔÇÉ ",
    "tooltip": false,
    "on-click": "hyprshot -m region -o Pictures/Screenshots/"
  },

  "custom/icon": {
   "format": "ÔåÉ " ,
   "tooltip": false
  },

  
   "group/hardware": {
    "orientation": "horizontal",
    "modules": ["custom/icon2","disk","memory","cpu"],
    "drawer": {
      "transition-duration": 900,
      "transition-left-to-right": false,
      "hide-on-unfocus": true
     }
  }, 
  "custom/icon2": {
    "format":"Ó≠ë ",
    "tooltip": false
  },
  "memory": {
    "interval": 30,
    "format": "ÓøÖ   {}%",
    "max-length": 10,
    "tooltip": false
  },

  "disk": {
    "interval": 30,
    "format": "ÔÉá  {specific_free:0.2f}GB",
    "unit": "GB",
    "tooltip": false
  },

  "cpu": {
      "interval": 10,
      "format": "Û∞ª†  {}%",
      "max-length": 10,
      "tooltip": false
  },
  
  "group/power": {
    "orientation": "horizontal",
    "modules": ["custom/icon3","custom/shutdown", "custom/reboot", "custom/logout","custom/lock"],
    "drawer": {
        "transition-duration": 600,
        "transition-left-to-right": false,
        "hide-on-unfocus": true
    }
  },

  
   "custom/lock": {
    "format": "ÔÄ£ ",
    "on-click": "hyprlock"
  },


  "custom/shutdown": {
    "format": "ÔàÑ ",
    "on-click": "shutdown now"
  },

  "custom/reboot": {
      "format": "ÔÄû ",
      "on-click": "reboot"
  },

  "custom/logout": {
      "format": "ÔÇã ",
      "on-click": "hyprctl dispatch exit"
  },
  "custom/icon3": {
    "format":"ÔÄë ",
    "tooltip": false
  },
  
    "group/brightness": {
    "orientation": "horizontal",
    "modules": ["backlight","backlight/slider"],
    "drawer": {
        "transition-duration": 600,
        "transition-left-to-right": false,
        "hide-on-unfocus": true
    }
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}  {percent}% ",
    "format-icons": ["ÔÜÖ ", "ÔÑë "]
  },
  "backlight/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal",
    "device": "intel_backlight"
}



}


