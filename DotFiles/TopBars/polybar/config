;==========================================================
; Polybar - Catppuccin Mocha (Fixed Clickable WiFi)
;==========================================================

[colors]
background     = #1e1e2e
background-alt = #181825
foreground     = #cdd6f4
foreground-alt = #bac2de
primary        = #89b4fa
secondary      = #f5c2e7
alert          = #f38ba8
accent         = #89dceb
green          = #a6e3a1
yellow         = #f9e2af
peach          = #fab387
mauve          = #cba6f7
surface0       = #313244

[bar/example]
width  = 100%
height = 32
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size  = 3
line-color = ${colors.primary}

padding-left  = 0
padding-right = 1

font-0 = "JetBrainsMono Nerd Font:style=Bold:pixelsize=12;3"
font-1 = "JetBrainsMono Nerd Font:pixelsize=16;4"
font-2 = "JetBrainsMono Nerd Font:pixelsize=12;3"

modules-left   = i3 
modules-center = date
modules-right  = updates separator volume separator battery separator network

wm-restack = i3
cursor-click = pointer

;==========================================================
; MODULES
;==========================================================

[module/separator]
type = custom/text
content = " | "
content-foreground = ${colors.surface0}
content-font = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true

label-focused            = %index%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.primary}
label-focused-underline  = ${colors.primary}
label-focused-padding    = 2

label-unfocused            = %index%
label-unfocused-padding    = 2
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-background = ${colors.background-alt}

[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/arch_updates.sh
interval = 600
format-prefix = "󰏖 "
format-prefix-foreground = ${colors.yellow}
format-background = ${colors.background-alt}
format-padding = 1

[module/volume]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.background-alt}
format-volume-padding = 1
label-volume = %percentage%%
ramp-volume-0 = 󰕿
ramp-volume-1 = 󰖀
ramp-volume-2 = 󰕾
ramp-volume-foreground = ${colors.secondary}

format-muted = <label-muted>
label-muted = "󰝟 Muted"
label-muted-foreground = ${colors.alert}
format-muted-background = ${colors.background-alt}
format-muted-padding = 1

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-full = <label-full>
format-full-prefix = "󰁹 "
format-full-prefix-foreground = ${colors.green}
format-full-background = ${colors.background-alt}
format-full-padding = 1
label-full = "Fully Charged"

format-charging = <animation-charging> <label-charging>
format-charging-background = ${colors.background-alt}
format-charging-padding = 1
label-charging = %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-background = ${colors.background-alt}
format-discharging-padding = 1
label-discharging = %percentage%%

ramp-capacity-0 = 󰁺
ramp-capacity-1 = 󰁼
ramp-capacity-2 = 󰁾
ramp-capacity-3 = 󰂀
ramp-capacity-4 = 󰁹
ramp-capacity-foreground = ${colors.peach}

animation-charging-0 = 󰢜
animation-charging-1 = 󰂇
animation-charging-2 = 󰂉
animation-charging-3 = 󰂋
animation-charging-4 = 󰂅
animation-charging-foreground = ${colors.green}
animation-charging-framerate = 750

[module/network]
type = internal/network
interface = wlan0
interval = 3.0

; FIXED: Using Action tags to handle the click
format-connected = <label-connected>
format-connected-prefix = "%{A1:kitty --class float_wifi impala:}󰖩 %{A}"
format-connected-prefix-foreground = ${colors.accent}
format-connected-background = ${colors.background-alt}
format-connected-padding = 1
label-connected = "%{A1:kitty --class float_wifi impala:}%essid%%{A}"

format-disconnected = <label-disconnected>
label-disconnected = "%{A1:kitty --class float_wifi impala:}󰖪 Off%{A}"
label-disconnected-foreground = ${colors.alert}
format-disconnected-background = ${colors.background-alt}
format-disconnected-padding = 1

[module/date]
type = internal/date
interval = 1
time = "%I:%M %P"
date = "%a %d"
format-prefix = "󱑒 "
format-prefix-foreground = ${colors.mauve}
format-background = ${colors.background-alt}
format-padding = 2
label = %date% %time%

[settings]
screenchange-reload = true
